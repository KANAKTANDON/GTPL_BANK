pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from GitHub
                git 'https://github.com/KANAKTANDON/GTPL_BANK.git'
            }
        }
        stage('Build') {
            steps {
                // Build your Selenium project (e.g., compile code)
                bat 'mvn clean compile'
            }
        }
        stage('Test') {
            steps {
                // Run Selenium tests
                //bat 'mvn test'
 bat 'mvn test -Dtestng.file=GTPL_BANK/regression.xml'
            }
        }
        // Add more stages as needed (e.g., deploy)
    }
}
